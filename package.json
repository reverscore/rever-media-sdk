{
  "name": "rever-media-sdk",
  "version": "1.0.0",
  "description": "Our client-side SDK to handle image and file uploads and downloads.",
  "homepage": "",
  "author": {
    "name": "Rever Score",
    "email": "info@reverscore.com",
    "url": "https://reverscore.com"
  },
  "files": [
    "dist",
    "lib"
  ],
  "main": "dist/index.js",
  "keywords": [
    "sdk",
    "media",
    "rever"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-syntax-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "axios-mock-adapter": "^1.17.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "strict": 0
    },
    "plugins": [
      "prettier"
    ],
    "globals": {
      "FormData": "readonly",
      "Blob": "readonly"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "rm -rf dist && npx babel lib --out-dir dist --ignore '**/*.test.js'",
    "prepublish": "npm run build"
  },
  "repository": "git@github.com:reverscore/rever-media-sdk.git",
  "jest": {
    "testEnvironment": "jsdom"
  },
  "private": true,
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "axios": "^0.19.2",
    "core-js": "^3.6.4",
    "lodash": "^4.17.15",
    "uuidv4": "^6.0.6"
  }
}
