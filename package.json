{
  "name": "rever-media-sdk",
  "version": "1.0.0",
  "description": "Our JavaScript SDK to handle image and file uploads and downloads.",
  "homepage": "",
  "author": {
    "name": "Rever Score",
    "email": "info@reverscore.com",
    "url": "https://reverscore.com"
  },
  "files": [
    "dist",
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "sdk",
    "media",
    "rever"
  ],
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-syntax-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.15.8",
    "@babel/compat-data": "^7.15.0",
    "axios-mock-adapter": "^1.17.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "install-peers-cli": "^2.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^9.4.3",
    "minimist": "^1.2.5",
    "prettier": "^1.19.1"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "strict": 0,
      "camelcase": 0
    },
    "plugins": [
      "prettier"
    ],
    "globals": {
      "FormData": "readonly",
      "Blob": "readonly",
      "navigator": "readonly",
      "document": "readonly",
      "window": "readonly"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "rm -rf dist && npx babel lib --out-dir dist --ignore lib/__tests__,lib/__mocks__",
    "prepublish": "npm run build",
    "prepare": "install-peers"
  },
  "repository": "git@github.com:reverscore/rever-media-sdk.git",
  "jest": {
    "testEnvironment": "jsdom"
  },
  "private": true,
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^0.22.0",
    "core-js": "^3.8.3",
    "js-file-download": "^0.4.12",
    "lodash": "^4.17.21",
    "npm-force-resolutions": "0.0.10",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "rn-fetch-blob": "*"
  }
}
